extends layout

block content
  .max-w-7xl.mx-auto.py-6.px-4(class="sm:px-6 lg:px-8")
    h1.text-3xl.font-extrabold.text-gray-900
      | TODO LIST

  if todos.length
    .flex.flex-col
      .-my-2.overflow-x-auto(class="sm:-mx-6 lg:-mx-8")
        .py-2.align-middle.inline-block.min-w-full(class="sm:px-6 lg:px-8")
          .shadow.overflow-hidden.border-b.border-gray-200(class="sm:rounded-lg")
            table.min-w-full.divide-y.divide-gray-200
              thead.bg-gray-50
                tr
                  th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider(
                    scope="col"
                  )
                    | Title
                  th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider(
                    scope="col"
                  )
                    | Description
                  th.relative.px-6.py-3(scope="col")
                    span.sr-only Delete
              tbody.bg-white.divide-y.divide-gray-200
                each todo in todos
                  tr
                    td.px-6.py-4.whitespace-nowrap
                      .flex.items-center
                        a(href=`todo/${todo.id}`)
                          .text-sm.font-medium.text-gray-900= todo.title
                    td.px-6.py-4.break-all
                      a(href=`todo/${todo.id}`)
                        .text-sm.text-gray-900= todo.body
                    td.px-6.py-4.whitespace-nowrap.text-right.text-sm.font-medium
                      a.text-indigo-600(
                        href=`todo/${todo.id}/delete`,
                        class="hover:text-indigo-900"
                      ) Delete
    .flex.flex-wrap.rounded-md.mt-8.justify-end
      a.inline-flex.items-center.justify-center.px-5.py-3.border.border-transparent.text-base.font-medium.rounded-md.text-white.bg-indigo-600(
        href="/new",
        class="hover:bg-indigo-700"
      )
        | Create a new one
  else
    .bg-gray-50.rounded-md
      .max-w-7xl.mx-auto.py-12.px-4(
        class="sm:px-6 lg:py-16 lg:px-8 lg:flex lg:items-center lg:justify-between"
      )
        h2.text-3xl.font-extrabold.tracking-tight.text-gray-900(class="sm:text-4xl")
          span.block Not sure how it works yet?
          span.block.text-indigo-600 Then, lets get started in!
        .mt-8.flex(class="lg:mt-0 lg:flex-shrink-0")
          .inline-flex.rounded-md.shadow
            a.inline-flex.items-center.justify-center.px-5.py-3.border.border-transparent.text-base.font-medium.rounded-md.text-white.bg-indigo-600(
              href="/new",
              class="hover:bg-indigo-700"
            )
              | Create a todo
